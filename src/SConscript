    ['simplecheck.c', vector],
    'temperature.c',
    'wc.c',
    'wlhist.c',
    'words.c',
    'count_digits_and_space.c',

    # Chapter 2
    'atoi.c',
    'bits.c',
    'limits.c',
    'misc.c',
    ['strs_test.c', 'strs.c'],

    # Chapter 3
    'control.c',
    ['escape.c'],
    ['expand.c', getline],
    'shellsort.c',
    ['unescape.c'],

    # Chapter 4
    'atof.c',
    ['matcher.c', getline],
    'qsort.c',
    'recur.c',
    'rpn_char.c',
    ['rpn.c', getline, vector],
